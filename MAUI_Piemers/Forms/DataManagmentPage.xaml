<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Piemers.Forms.DataManagmentPage"
             Title="DataManagmentPage" NavigatedTo="ContentPage_NavigatedTo">
    <ScrollView>
    <VerticalStackLayout>
        <Button x:Name="btnTestData" Text="Test Data" Clicked="btnTestData_Clicked"></Button>
        <Button x:Name="btnReset" Text="Reset" Clicked="btnReset_Clicked"></Button>
        <Button x:Name="btnSave" Text="Save" Clicked="btnSave_Clicked"></Button>
        <Button x:Name="btnLoad" Text="Load" Clicked="btnLoad_Clicked"></Button>
        <Button x:Name="btnPrint" Text="Print" Clicked="btnPrint_Clicked"></Button>
        <Label x:Name="lblData" Text=""></Label>

        <Label Text="ROTATION" 
	BindingContext="{x:Reference slider}" 
	Rotation="{Binding Path=Value}" 
	FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center" />
        <Slider x:Name="slider" Maximum="360" VerticalOptions="Center" />


    </VerticalStackLayout>
    </ScrollView>
</ContentPage>