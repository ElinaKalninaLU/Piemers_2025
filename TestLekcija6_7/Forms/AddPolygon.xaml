<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestLekcija6_7.Forms.AddPolygon"
             Title="AddPolygon">
    <VerticalStackLayout>
        <Label 
            Text="Add polygon"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout>
            <Label Text="Point"></Label>
            <Label Text="X: "></Label>
            <Entry x:Name="txtX"></Entry>
            <Label Text="Y: "></Label>
            <Entry x:Name="txtY"></Entry>
        </HorizontalStackLayout>
        <Button x:Name="btnAddPoint" Text="Add Point" Clicked="btnAddPoint_Clicked"></Button>
        <HorizontalStackLayout>
            <ListView x:Name="lwPointList"></ListView>
            <Button x:Name="btnRemovePoint" Text="Remove Point" Clicked="btnRemovePoint_Clicked"></Button>
        </HorizontalStackLayout>
        <Button x:Name="btnAddPolygon" Text="Create Polygon" Clicked="btnAddPolygon_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>